'use client';

import { useState, useEffect } from 'react';
import Link from 'next/link';

export default function CartPage() {
  const [cartItems, setCartItems] = useState<any[]>([]);
  const [darkMode, setDarkMode] = useState(true);

  // Load the cart items from LocalStorage
  useEffect(() => {
    const savedCart = localStorage.getItem('vault_cart');
    if (savedCart) {
      setCartItems(JSON.parse(savedCart));
    }
  }, []);

  const totalPrice = cartItems.reduce((sum, item) => {
    return sum + parseFloat(item.price.replace('$', ''));
  }, 0);

  const theme = {
    bg: darkMode ? '#0f172a' : '#f8fafc',
    card: darkMode ? '#1e293b' : '#ffffff',
    text: darkMode ? 'white' : '#1e293b',
    border: darkMode ? '#334155' : '#e2e8f0',
  };

  return (
    <div style={{ backgroundColor: theme.bg, color: theme.text, minHeight: '100vh', padding: '40px', fontFamily: 'system-ui' }}>
      <nav style={{ marginBottom: '40px' }}>
        <Link href="/" style={{ color: '#3b82f6', textDecoration: 'none', fontWeight: 'bold' }}>
          ‚Üê Back to Shop
        </Link>
      </nav>

      <h1 style={{ fontSize: '2.5rem', marginBottom: '30px' }}>Your Shopping Cart</h1>

      <div style={{ maxWidth: '800px' }}>
        {cartItems.length === 0 ? (
          <p style={{ color: '#94a3b8' }}>Your cart is empty.</p>
        ) : (
          <>
            {cartItems.map((item, index) => (
              <div key={index} style={{ 
                backgroundColor: theme.card, 
                padding: '20px', 
                borderRadius: '12px', 
                marginBottom: '15px', 
                border: `1px solid ${theme.border}`,
                display: 'flex',
                justifyContent: 'space-between'
              }}>
                <div>
                  <h3 style={{ margin: 0 }}>{item.title}</h3>
                  <span style={{ color: '#3b82f6', fontSize: '0.9rem' }}>{item.subject}</span>
                </div>
                <span style={{ fontWeight: 'bold', fontSize: '1.2rem' }}>{item.price}</span>
              </div>
            ))}

            <div style={{ marginTop: '40px', borderTop: `2px solid ${theme.border}`, paddingTop: '20px', textAlign: 'right' }}>
              <h2 style={{ fontSize: '1.5rem' }}>Total: ${totalPrice.toFixed(2)}</h2>
              <button style={{ 
                backgroundColor: '#10b981', 
                color: 'white', 
                padding: '15px 40px', 
                borderRadius: '12px', 
                border: 'none', 
                fontSize: '1.1rem', 
                fontWeight: 'bold', 
                marginTop: '20px',
                cursor: 'pointer' 
              }}>
                Proceed to Checkout
              </button>
            </div>
          </>
        )}
      </div>
    </div>
  );
}